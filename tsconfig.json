{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "webpack.config.ts",
    "**/*.spec.ts",
    "dist"
  ]
}
